{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "baseUrl": "./",
        "declaration": false,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "removeComments": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules",
        "__tests__",
        "bundle",
        "cjs",
        "esm5",
        "esm2015"
    ]
}